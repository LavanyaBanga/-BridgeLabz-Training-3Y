// Class to calculate area of a triangle in sq.cm and sq.in
import java.util.Scanner;

class TriangleArea {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        // Input base and height
        System.out.print("Enter base in cm: ");
        double base = input.nextDouble();

        System.out.print("Enter height in cm: ");
        double height = input.nextDouble();

        // Compute area in sq.cm
        double areaSqCm = 0.5 * base * height;

        // Convert to sq.in (1 in = 2.54 cm => 1 sq in = 2.54 * 2.54 sq cm)
        double areaSqIn = areaSqCm / (2.54 * 2.54);

        // Display result
        System.out.println("The Area of the triangle in sq.in is " + areaSqIn + 
                           " and in sq.cm is " + areaSqCm);
    }
}
